<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:id="@+id/textName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="@dimen/list_horizontal_margin"
        android:layout_marginTop="@dimen/list_horizontal_margin"
        android:layout_marginLeft="@dimen/list_horizontal_margin" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editName"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textDescription"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/list_horizontal_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:id="@+id/textDescription"
        android:layout_below="@+id/editName"
        android:layout_alignStart="@+id/textName"
        android:layout_alignLeft="@+id/textName"
        android:layout_marginTop="@dimen/list_horizontal_margin"
        android:layout_marginRight="@dimen/list_horizontal_margin" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editDescription"
        android:layout_below="@+id/editName"
        android:layout_alignRight="@+id/editName"
        android:layout_alignEnd="@+id/editName"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@+id/textDescription"
        android:layout_toEndOf="@+id/textDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/param"
        android:id="@+id/textView3"
        android:layout_toStartOf="@+id/editDescription"
        android:gravity="left"
        android:layout_above="@+id/spinCond"
        android:layout_alignLeft="@+id/textDescription"
        android:layout_alignStart="@+id/textDescription" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinParam"
        android:gravity="left"
        android:layout_below="@+id/editDescription"
        android:layout_toStartOf="@+id/editDescription"
        android:layout_toRightOf="@+id/textView3"
        android:layout_alignRight="@+id/editDescription"
        android:layout_alignEnd="@+id/editDescription"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cond"
        android:id="@+id/textView4"
        android:gravity="left"
        android:layout_above="@+id/editValue"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinCond"
        android:layout_toEndOf="@+id/textDescription"
        android:gravity="left"
        android:layout_below="@+id/spinParam"
        android:layout_toStartOf="@+id/spinParam"
        android:layout_alignRight="@+id/spinParam"
        android:layout_alignEnd="@+id/spinParam"
        android:layout_alignLeft="@+id/spinParam"
        android:layout_alignStart="@+id/spinParam" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/value"
        android:id="@+id/textView5"
        android:gravity="left"
        android:layout_alignBottom="@+id/editValue"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editValue"
        android:layout_toEndOf="@+id/textDescription"
        android:gravity="right"
        android:layout_below="@+id/spinCond"
        android:layout_alignLeft="@+id/spinCond"
        android:layout_alignStart="@+id/spinCond"
        android:layout_alignRight="@+id/spinCond"
        android:layout_alignEnd="@+id/spinCond" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:id="@+id/buttonCancel"
        android:layout_alignTop="@+id/buttonUpdate"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignBottom="@+id/buttonUpdate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:id="@+id/buttonUpdate"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/editValue"
        android:layout_alignRight="@+id/editValue"
        android:layout_alignEnd="@+id/editValue" />

</RelativeLayout>